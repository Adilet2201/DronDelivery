# DJANGO
DJANGO_SETTINGS_MODULE=djangoProject3.settings
SECRET_KEY=<your-real-secret>
DEBUG=False
# no protocol, no trailing slash:
ALLOWED_HOSTS=drondelivery-production-f919.up.railway.app,localhost,127.0.0.1

# POSTGRES (Railway Postgres plugin will give you these)
DATABASE_NAME=<railway_db_name>
DATABASE_USER=<railway_user>
DATABASE_PASSWORD=<railway_password>
DATABASE_HOST=<railway_host>
DATABASE_PORT=<railway_port>

# S3 (if you’re using real AWS S3 in prod)
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_STORAGE_BUCKET_NAME=<your-bucket-name>
AWS_S3_REGION_NAME=<your-region>

# MINIO is only for local/dev—omit in prod unless you have a hosted MinIO endpoint

# RAILWAY PORT
# Railway injects PORT automatically; ENTRYPOINT uses it.
